<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.mapper.GoodsMapper">
    <resultMap id="GoodMap" type="com.example.demo.model.Good">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="favor" column="favor"/>
        <result property="count" column="count"/>
        <result property="price" column="price"/>
        <result property="discount" column="discount"/>
        <result property="introduce" column="introduce"/>
        <result property="imgurl" column="imgurl"/>
        <!-- 补全集合属性映射 -->
        <collection property="comments" ofType="com.example.demo.model.Comment">
            <id property="id" column="comments_id"/>
            <result property="name" column="comments_name"/>
            <result property="avatar" column="avatar"/>
            <result property="content" column="comments_content"/>
            <result property="date" column="date"/>
        </collection>
        <collection property="goods_wall" ofType="com.example.demo.model.GoodWall">
            <id property="id" column="wall_id"/>
            <result property="imgurl" column="imgurl"/>
        </collection>
        <collection property="tags" ofType="com.example.demo.model.Tag">
            <id property="id" column="tags_id"/>
            <result property="content" column="tags_content"/>
        </collection>
    </resultMap>
    <select id="selectGoods" resultType="com.example.demo.model.Good">
        select g.*, c.id as comments_id, c.name as comments_name,c.avatar,
               c.content as comments_content,c.date,t.id as tags_id,t.content as tags_content,
               w.id as wall_id,w.imgurl
        from goods g
                 left join comments c on c.goods_id = g.id
                 left join tags t on t.goods_id = g.id
                 left join goods_wall w on w.goods_id = g.id
        order by g.id
    </select>
</mapper>