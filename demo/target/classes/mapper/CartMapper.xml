<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.mapper.CartMapper">

    <resultMap id="CartMap" type="com.example.demo.model.Cart">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="goodsId" column="goods_id"/>
        <result property="count" column="count"/>
    </resultMap>

    <insert id="addToCart" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO cart(user_id, goods_id, count) VALUES(#{userId}, #{goodsId}, #{count})
    </insert>

    <select id="selectByUserId" resultMap="CartMap">
        SELECT * FROM cart WHERE user_id = #{userId}
    </select>

    <select id="selectExist" resultMap="CartMap">
        SELECT * FROM cart WHERE user_id = #{userId} AND goods_id = #{goodsId}
    </select>

    <update id="updateCount">
        UPDATE cart SET count = count + #{count} WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM cart WHERE id = #{id}
    </delete>

</mapper>